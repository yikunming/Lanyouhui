<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e3e3"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pcd_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9e3e3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f4f4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#f7f4f4"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="#E75555"
                    android:text="昵称:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/personal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="张三"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </LinearLayout>


            <EditText
                android:id="@+id/personal_intro"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="150dp"
                android:gravity="top|left"
                android:paddingBottom="16dp"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:text="介绍自己"
                android:textColor="#000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_gender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f7f4f4"
                android:orientation="horizontal"
                android:padding="6dp"
                android:textColor="#000">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/gender"
                    android:textColor="#000" />

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="性别:"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    style="@null"
                    android:layout_gravity="center_vertical"
                    android:text="男"
                    android:id="@+id/personal_gender"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_lin_bir"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="#f7f4f4"
                android:orientation="horizontal"
                android:padding="6dp"
                android:textColor="#000">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/birthday"
                    android:textColor="#000" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日:"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/personal_bir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.17.2"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pcd_commonProblem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="#f7f4f4"
        android:orientation="horizontal"
        android:padding="6dp"
        android:textColor="#000">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/area" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="居住地:"
            android:textColor="#000"
            android:textSize="18dp" />

        <EditText
            style="@null"
            android:text="南充"
            android:id="@+id/personal_area"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pcd_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#f7f4f4"
        android:orientation="horizontal"
        android:padding="6dp"
        android:textColor="#000">

        <TextView
            android:id="@+id/setting_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#4694DB"
            android:gravity="center"
            android:textColor="#fff"
            android:text="保存"
            android:textSize="20dp"  />

    </LinearLayout>

</LinearLayout>